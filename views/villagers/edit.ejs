<%- include('../partials/header', { user }) %>

<div class="container">
    <div class="row justify-content-center">
        <div class="row justify-content-center">
            <h2>Edit Comment</h2>
            
            <form method="POST" action="/villagers/<%= comment.id %>/edit?_method=PUT">
                <input hidden type="text" name="userId" value="<%= comment.userId %>"/>
                <input hidden type="text" name="villagerId" value="<%= comment.villagerId %>"/>
                <textarea class="form-control" id="comment" type="text" name="comment" value="<%= comment.comment %>"><%= comment.comment %></textarea>
            
                <button class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>

</div>

<%- include('../partials/footer') %>